<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.dyrelosh.tapmessage.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginMethodFragment"
            app:destination="@id/loginMethodFragment" />
        <action
            android:id="@+id/action_splashFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="ru.dyrelosh.tapmessage.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_newChatFragment"
            app:destination="@id/newChatFragment" />
    </fragment>
    <fragment
        android:id="@+id/fillProfileFragment"
        android:name="ru.dyrelosh.tapmessage.FillProfileFragment"
        android:label="fragment_fill_profile"
        tools:layout="@layout/fragment_fill_profile" >
        <action
            android:id="@+id/action_fillProfileFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment2"
        android:name="ru.dyrelosh.tapmessage.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment2_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/newChatFragment"
        android:name="ru.dyrelosh.tapmessage.NewChatFragment"
        android:label="fragment_new_chat"
        tools:layout="@layout/fragment_new_chat" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="ru.dyrelosh.tapmessage.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_fillProfileFragment"
            app:destination="@id/fillProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginMethodFragment"
        android:name="ru.dyrelosh.tapmessage.LoginMethodFragment"
        android:label="fragment_login_method"
        tools:layout="@layout/fragment_login_method" >
        <action
            android:id="@+id/action_loginMethodFragment_to_loginFragment2"
            app:destination="@id/loginFragment2" />
        <action
            android:id="@+id/action_loginMethodFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
</navigation>